{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@fixtures/*": ["Fixtures/*"],
      "@pages/*": ["Pages/*"],
      "@general/*": ["General/*"],
      "@tests/*": ["Tests/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
} 